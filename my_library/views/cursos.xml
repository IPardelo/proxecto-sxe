<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='cursos_action' model='ir.actions.act_window'>
        <field name="name">Cursos</field>
        <field name="res_model">cursos</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Cursos" id="cursos_menu" parent="base_menu" action="cursos_action"/>

    <!-- Form View -->
    <record id="cursos_form" model="ir.ui.view">
        <field name="name">Formulario de cursos</field>
        <field name="model">cursos</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="roupa_tree" model="ir.ui.view">
        <field name="name">Lista de cursos</field>
        <field name="model">cursos</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
